<?xml version="1.0" encoding="utf-8"?>
                                                                   
    
                 
                        
                                                                    
           
    <androidx.cardview.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        app:cardBackgroundColor="@color/white"
        android:layout_height="match_parent"
        app:cardCornerRadius="0dp"
        tools:context="ui.hearderview.SliderMainItemFragment" android:tag="layout/frag_slider_main_0" xmlns:android="http://schemas.android.com/apk/res/android">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_slider_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:contentDescription="@string/image_view_description"
                android:scaleType="centerCrop"
                android:transitionName="@string/input_state"
                tools:targetApi="LOLLIPOP"/>

<!--            <LinearLayout-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="match_parent"-->
<!--                android:layout_alignBottom="@id/iv_slider_image"-->
<!--                android:background="@color/overlay" />-->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:orientation="vertical"
                android:gravity="start"
                android:visibility="gone"
                android:layout_centerVertical="true"
                android:layout_margin="16dp">

                <TextView
                    android:id="@+id/tv_slider_preheading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tag="binding_1"           
                    android:textSize="24sp"
                    tools:targetApi="LOLLIPOP"
                    android:textStyle="bold"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/tv_slider_heading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tag="binding_2"              
                    android:textColor="@color/semi_white"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
         