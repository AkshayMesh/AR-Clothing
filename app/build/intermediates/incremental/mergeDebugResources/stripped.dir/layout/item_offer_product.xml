<?xml version="1.0" encoding="utf-8"?>
        
    
                 
                               
                                                                     
           
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_gravity="center"
        android:background="@null"
        android:layout_marginEnd="8dp" android:tag="layout/item_offer_product_0">

        <androidx.cardview.widget.CardView
            android:layout_width="180dp"
            android:layout_height="140dp"
            card_view:cardBackgroundColor="@color/colorPrimary"
            card_view:cardElevation="4dp"
            card_view:cardCornerRadius="6dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:clipToPadding="false">

                <ImageView
                    android:id="@+id/iv_grid_product_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:transitionName="@string/product_transition"
                    android:contentDescription="@string/image_view_description"
                    android:adjustViewBounds="true"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/text_layout"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    card_view:layout_constraintTop_toTopOf="parent"
                    card_view:layout_constraintStart_toStartOf="parent"
                    card_view:layout_constraintBottom_toBottomOf="parent"
                    card_view:layout_constraintEnd_toEndOf="parent"
                    android:background="@color/overlay">

                    <TextView
                        android:id="@+id/tv_offer_percent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:textColor="@color/white"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        card_view:layout_constraintBottom_toBottomOf="parent"
                        card_view:layout_constraintEnd_toEndOf="parent"
                        card_view:layout_constraintStart_toStartOf="parent"
                        card_view:layout_constraintTop_toTopOf="parent"
                        tools:text="@string/zero_text"
                        card_view:layout_constraintVertical_bias="0.45"/>

                    <TextView
                        android:id="@+id/tv_grid_product_heading"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:layout_marginBottom="8dp"
                        android:textColor="@color/white"
                        tools:text="TextView"
                        android:tag="binding_1"             
                        card_view:layout_constraintStart_toStartOf="parent"
                        card_view:layout_constraintEnd_toEndOf="parent"
                        card_view:layout_constraintBottom_toBottomOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

         